generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User{
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
}

model Admin{
  email     String   @id
}

model Book{
  id           String   @id @default(uuid())
  googleBookId String?
  isbn13       String   @unique
  title        String
  authors      String[]
  description  String?
  thumbnail    String?
  createdAt    DateTime @default(now())
}

model PendingBook{
  id           String   @id @default(uuid())
  googleBookId String?
  isbn13       String   @unique
  title        String
  authors      String[]
  description  String?
  thumbnail    String?
  createdAt    DateTime @default(now())
}
